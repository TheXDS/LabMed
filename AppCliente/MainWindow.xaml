<Window x:Class="Sinergia.SLM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xceed="http://schemas.xceed.com/wpf/xaml/avalondock"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Height="18">
            <ProgressBar Margin="3" Width="100"/>
            <TextBlock Text="Listo"/>
        </DockPanel>
        <StackPanel Width="150" x:Name="pnlMenu">
            
        </StackPanel>
        <xceed:DockingManager>
            <xceed:LayoutRoot>
                <xceed:LayoutPanel>
                    <xceed:LayoutAnchorablePane x:Name="lapLeft" DockWidth="200"/>
                    <xceed:LayoutDocumentPane x:Name="lapMain"/>
                    <xceed:LayoutAnchorablePane x:Name="lapRight"  DockWidth="200"/>
                </xceed:LayoutPanel>
            </xceed:LayoutRoot>
        </xceed:DockingManager>
    </DockPanel>
</Window>
